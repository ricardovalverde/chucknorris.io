<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chucknorrisio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcherweb"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcherweb"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChuckNorrisio">
        <activity
            android:name=".JokeActivity"
            android:label="@string/title_activity_joke"
            android:theme="@style/Theme.ChuckNorrisio.NoActionBar"/>
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.ChuckNorrisio.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ChuckNorrisio.NoActionBar" />
    </application>

</manifest>